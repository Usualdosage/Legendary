  </ItemGroup>
  <ItemGroup>
    <None Update="stylecop.json">
      <IncludeInPackage>false</IncludeInPackage>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
