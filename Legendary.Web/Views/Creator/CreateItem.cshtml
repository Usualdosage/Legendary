@model string

@Html.AntiForgeryToken()

<div class="container" style="margin-top: 75px">
    <div class="row">
        <div class="col-md">
            <form action="@Url.Action("CreateItem")" method="post">
                <input name="submittalfield" class="visually-hidden" tabindex="-1" autocomplete="off">
                <div class="card text-center">
                    <div class="card-header">
                        <h4 class="card-title">Create an Item</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md">
                                <input type="text" class="charinput" placeholder="Item Name" name="Name" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md">
                                <input type="text" class="charinput" placeholder="Short Description" name="ShortDescription" required />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md">
                                <textarea name="LongDescription" class="descinput" placeholder="Enter Long Description" required></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md">
                                <span class="input-label">Level</span>
                                <input type="number" class="charinput" name="Level" required value="1" />
                            </div>
                            <div class="col-md">
                                <span class="input-label">Weight</span>
                                <input type="number" class="charinput" name="Weight" required value="10" />
                            </div>
                        </div>
                        <div class="row">
                            <p>Armor Settings</p>
                            <div class="col-md">
                                <span class="input-label">Pierce</span>
                                <input type="number" class="charinput" name="Pierce" value="1" />
                            </div>
                            <div class="col-md">
                                <span class="input-label">Blunt</span>
                                <input type="number" class="charinput" name="Blunt" value="1" />
                            </div>
                            <div class="col-md">
                                <span class="input-label">Edged</span>
                                <input type="number" class="charinput" name="Edged" value="1" />
                            </div>
                            <div class="col-md">
                                <span class="input-label">Magic</span>
                                <input type="number" class="charinput" name="Magic" value="1" />
                            </div>
                        </div>
                        <div class="row">
                            <p>Item Settings</p>
                            <div class="col-md">
                                <span class="input-label">Item Type</span>
                                <select name="ItemType"
                                        class="form-control"
                                        asp-items="Html.GetEnumSelectList<Legendary.Core.Types.ItemType>()">
                                    <option value="">Select Item Type</option>
                                </select>
                            </div>
                            <div class="col-md">
                                <span class="input-label">Item Flags</span>
                                <select name="ItemFlags"
                                        class="form-control"
                                        multiple
                                        asp-items="Html.GetEnumSelectList<Legendary.Core.Types.ItemFlags>()">
                                </select>
                            </div>
                            <div class="col-md">
                                <span class="input-label">Wear Location</span>
                                <select name="WearLocation"
                                        class="form-control"
                                        multiple
                                        asp-items="Html.GetEnumSelectList<Legendary.Core.Types.WearLocation>()">
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <p>Weapon Settings</p>
                            <div class="col-md">
                                <span class="input-label">Hit Dice</span>
                                <input type="number" class="charinput" name="HitDice" value="10" />
                            </div>
                            <div class="col-md">
                                <span class="input-label">Damage Dice</span>
                                <input type="number" class="charinput" name="DamageDice" value="10" />
                            </div>
                            <div class="col-md">
                                <span class="input-label">Modifier</span>
                                <input type="number" class="charinput" name="Modifier" value="10" />
                            </div>
                            <div class="col-md">
                                <span class="input-label">Damage Type</span>
                                <select name="DamageType"
                                        class="form-control"
                                        asp-items="Html.GetEnumSelectList<Legendary.Core.Types.DamageType>()">
                                    <option value="">Select Damage Type</option>
                                </select>
                            </div>
                        </div>

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><input type="submit" class="btn btn-primary" value="Create" />&nbsp;<a class="btn btn-secondary" href="@Url.Action("Creator")">Back</a></li>
                            <li class="list-group-item"><p class="alert">@Model</p></li>
                        </ul>
                        <div class="card-footer">
                            &copy;2022 Legendary
                        </div>
                    </div>
                    </div>
            </form>
        </div>

    </div>
</div>